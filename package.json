{
	"name": "wallflow-theme",
	"displayName": "Wallflow Theme",
	"description": "Dynamic VS Code theme from wallflow wallpaper colors",
	"publisher": "mksg",
	"author": "MKSG",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/mksg-mindkraftstudiosgroup/vscode-wal-theme"
	},
	"bugs": {
		"url": "https://github.com/mksg-mindkraftstudiosgroup/vscode-wal-theme/issues"
	},
	"homepage": "https://github.com/mksg-mindkraftstudiosgroup/vscode-wal-theme#readme",
	"engines": {
		"vscode": "^1.34.0"
	},
	"extensionKind": [
		"ui",
		"workspace"
	],
	"categories": [
		"Themes"
	],
	"keywords": [
		"theme",
		"wallflow",
		"wallpaper",
		"pywal",
		"dynamic"
	],
	"icon": "icon.png",
	"activationEvents": [
		"*",
		"onCommand:wallflowTheme.update"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "wallflowTheme.update",
				"title": "Update",
				"category": "Wallflow Theme"
			}
		],
		"configuration": {
			"title": "Wallflow Theme",
			"properties": {
				"wallflowTheme.autoUpdate": {
					"type": "boolean",
					"default": true,
					"description": "Automatically update the theme when wallflow colors change"
				}
			}
		},
		"themes": [
			{
				"label": "Wallflow",
				"uiTheme": "vs-dark",
				"path": "./themes/wallflow.json",
				"_watch": true
			},
			{
				"label": "Wallflow Bordered",
				"uiTheme": "vs-dark",
				"path": "./themes/wallflow-bordered.json",
				"_watch": true
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/color": "^3.0.2",
		"@types/glob": "^7.1.4",
		"@types/node": "^13.13.52",
		"@types/vscode": "^1.34.0",
		"@typescript-eslint/eslint-plugin": "^4.28.3",
		"@typescript-eslint/parser": "^4.28.3",
		"eslint": "^7.30.0",
		"glob": "^7.1.7",
		"typescript": "^3.9.10"
	},
	"dependencies": {
		"chokidar": "^3.5.2",
		"color": "^3.1.3"
	}
}